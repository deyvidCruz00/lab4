{
  "id": null,
  "uid": "sys-mon",
  "title": "System Monitoring Dashboard",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "gauge",
      "title": "CPU Usage (%)",
      "targets": [
        {
          "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[2m])) * 100)",
          "legendFormat": "{{instance}}"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 5}
    },
    {
      "type": "gauge",
      "title": "Memory Usage (%)",
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "{{instance}}"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"x": 6, "y": 0, "w": 6, "h": 5}
    },
    {
      "type": "gauge",
      "title": "Disk Usage (%)",
      "targets": [
        {
          "expr": "(1 - (node_filesystem_free_bytes{fstype!=\"tmpfs\"} / node_filesystem_size_bytes{fstype!=\"tmpfs\"})) * 100",
          "legendFormat": "{{instance}}"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 0, "w": 6, "h": 5}
    },
    {
      "type": "stat",
      "title": "Active MySQL Connections",
      "targets": [
        {
          "expr": "mysql_global_status_threads_connected",
          "legendFormat": "Connections"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 5, "w": 6, "h": 4}
    },
    {
      "type": "graph",
      "title": "MySQL Queries per Second",
      "targets": [
        {
          "expr": "rate(mysql_global_status_questions[1m])",
          "legendFormat": "QPS"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"x": 6, "y": 5, "w": 12, "h": 5}
    },
    {
      "type": "graph",
      "title": "HTTP Requests (Nginx)",
      "targets": [
        {
          "expr": "rate(nginx_http_requests_total[1m])",
          "legendFormat": "{{instance}}"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 10, "w": 12, "h": 5}
    },
    {
      "type": "graph",
      "title": "HTTP 5xx Errors (Nginx)",
      "targets": [
        {
          "expr": "rate(nginx_http_requests_total{status=~\"5..\"}[1m])",
          "legendFormat": "5xx"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 10, "w": 12, "h": 5}
    },
    {
      "type": "stat",
      "title": "Container Uptime (s)",
      "targets": [
        {
          "expr": "time() - container_start_time_seconds",
          "legendFormat": "{{name}}"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 15, "w": 6, "h": 4}
    },
    {
      "type": "graph",
      "title": "Container CPU Usage",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total[1m])",
          "legendFormat": "{{name}}"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"x": 6, "y": 15, "w": 12, "h": 5}
    },
    {
      "type": "stat",
      "title": "Host Load Average (1m)",
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "load"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {"x": 18, "y": 15, "w": 6, "h": 4}
    }
  ]
}
